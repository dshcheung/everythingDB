<div class="container" ng-controller="NameCtrl">
  <div class="row">
    <div class="col-xs-12 text-center">
      <h1>HIHI</h1>

      <h2>
        <ol>
          <li ng-repeat="name in names track by $index">
            {{name}}
          </li>
        </ol>
      </h2>

      <div id="priceChart"></div>

      <form ng-submit="addName()">
        <input ng-model="enteredName">
      </form>

      <%= subscribe_to "/messages/new" %>

      <ul id="messages_list">
        <% Message.all.each do |message| %>
          <li><%= message.content %></li>
        <% end %>
      </ul>

      <%= form_for Message.new, :remote => true do |f| %>
        <%= f.text_field :content, :placeholder => "message" %>
        <%= f.submit "Send" %>
      <% end %>

      <table class="table table-condense">
        <tr ng-repeat="price in prices track by $index">
          <td>
            {{price[0]}}
          </td>
          <td>
            {{price[1]}}
          </td>
        </tr>
      </table>

    </div>
  </div>
</div>