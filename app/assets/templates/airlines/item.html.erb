<div class="container">
  <div class="row">
    <h1>{{ airline.name }}</h1>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>IATA Code</th>
            <th>ICAO Code</th>
            <th>Number of Active Airplaines</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>{{ airline.iata }}</td>
            <td>{{ airline.icao }}</td>
            <td>{{ airplanes.count }}</td>
          </tr>
        </tbody>
      </table>
    </div>
      
    <h2>List of Airplanes</h2>
    <div class="table-responsive" data-ng-show="airplanes.length > 0">
      <table class="table">
        <thead>
          <tr>
            <th>Registration Code</th>
            <th>Type</th>
            <th>Type Code</th>
            <th>ModeS</th>
            <th>S/N</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr data-ng-repeat="airplane in airplanes">
            <td>{{ airplane.registration_code }}</td>
            <td>{{ airplane.plane_type }}</td>
            <td>{{ airplane.plane_type_code }}</td>
            <td>{{ airplane.mode_s }}</td>
            <td>{{ airplane.s_n }}</td>
            <td>
              <a data-ng-href="/airplanes/{{ airline.icao }}/{{ airplane.registration_code }}" class="btn btn-xs btn-default">See more details</a>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div data-ng-show="airplanes.length == 0">
      No airplanes listed yet.
    </div>
  </div>
</div>