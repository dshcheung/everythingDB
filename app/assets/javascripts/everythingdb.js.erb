'use strict';

var everythingDb = angular.module('everythingDB', ['ng-polymer-elements', 'ngRoute']);

everythingDb.config(['$routeProvider',function($routeProvider) {
  $routeProvider.
    when('/', {
      templatesUrl: 'index.html',
      controller: 'StaticPagesCtrl'
    }).
    when('/companies', {
      templateUrl: "<%= asset_path('companies-list.html') %>",
      controller: 'CompanyListCtrl'
    }).
    when('/companies/:symbol', {
      templateUrl: '../assets/companies-show.html',
      controller: 'CompanyShowCtrl'
    }).
    otherwise({
      redirectTo: '/'
    })
}]);

everythingDb.controller('StaticPages', ['', function(){
  
}])

everythingDb.controller('CompanyListCtrl', ['$scope', '$http', function($scope, $http){
  $http.get('companies.json').success(function(data) {
    $scope.companies = data.companies;
  });
}]);

everythingDb.controller('CompanyShowCtrl', ['$scope', '$http', '$routeParams', function($scope, $http, $routeParams){
  $http.get('companies/'+$routeParams.symbol+'.json').success(function(data) {
    $scope.company = data;
  });
}]);