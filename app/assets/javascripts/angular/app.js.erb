'use strict';

var app = angular.module('app', ['ngRoute']);

app.config(['$routeProvider', '$locationProvider', function($routeProvider, $locationProvider) {
  $routeProvider.
    when('/', {
      templateUrl: "<%= asset_path('static_pages/home.html') %>",
      controller: 'StaticPagesCtrl'
    }).
    when('/companies', {
      templateUrl: "<%= asset_path('companies/list.html') %>",
      controller: 'CompanyListCtrl'
    }).
    when('/companies/:symbol', {
      templateUrl: "<%= asset_path('companies/show.html') %>",
      controller: 'CompanyShowCtrl'
    }).
    when('/airlines', {
      templateUrl: "<%= asset_path('airlines/list.html') %>",
      controller: 'AirlineListCtrl'
    }).
    when('/airlines/:icao', {
      templateUrl: "<%= asset_path('airlines/item.html') %>",
      controller: 'AirlineItemCtrl'
    }).
    when('/airplanes', {
      templateUrl: "<%= asset_path('airplanes/list.html') %>",
      controller: 'AirplaneListCtrl'
    }).
    when('/airplanes/:registration_code', {
      templateUrl: "<%= asset_path('airplanes/item.html') %>",
      controller: 'AirplaneItemCtrl'
    }).
    otherwise({
      redirectTo: '/'
    });

    $locationProvider.html5Mode(true);
}]);
